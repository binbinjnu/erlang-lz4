{erl_opts, [{i, "src"},
            warnings_as_errors,
            {w, all},
            warn_export_all]}.

{clean_files, [".eunit",
               "ebin/*.beam"]}.

{port_env, [
    {"win32", "CFLAGS", "/Ox"},
    {"linux|darwin", "CFLAGS", "$CFLAGS -O2 -finline-functions -fomit-frame-pointer -fno-strict-aliasing -Wmissing-prototypes -Wall -std=c99"}
]}.

{port_specs, [
    {"win32", "priv/lz4_nif.dll", ["c_src/lz4_nif.c", "c_src/lz4.c", "c_src/lz4hc.c"]},
    {"linux|darwin", "priv/lz4_nif.so", ["c_src/lz4_nif.c", "c_src/lz4.c", "c_src/lz4hc.c"]}
]}.

{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

